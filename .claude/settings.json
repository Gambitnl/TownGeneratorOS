{
  "permissions": {
    "allow": [
      "WebFetch",
      "Bash(git commit:*)",
      "Bash(curl:*)",
      "Write(./.discord/**)",
      "Task(discord-post)",
      "Bash(timeout 60 ping 127.0.0.1 -n 60 > nul && echo \"60 seconds elapsed - checking Discord\")"
    ],
    "ask": [],
    "deny": [
      "Read(./.env)",
      "Read(./secrets/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["discord", "github"]
}
